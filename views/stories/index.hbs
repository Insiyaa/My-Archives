<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- user -> stories user --}}
                    {{!-- ../user is logged in user - getting out of the loop --}}
                    {{!-- triple curly brace to parse html --}}
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{truncate (stripTags body) 50}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn-grey">Read more</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>Oops, no stories to display!</p>
    {{/each}}
</div>